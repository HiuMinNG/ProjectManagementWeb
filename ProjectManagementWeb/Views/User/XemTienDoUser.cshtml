@model IEnumerable<ProjectManagementWeb.Models.DuAn>

@{
    ViewBag.Title = "XemTienDoUser";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center ; font-size:50px">Xem Tiến Độ User</h2>

<p>
    @Html.ActionLink("Create New", "TaoTienDoUser", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MoTa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayBatDau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayKetThuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NganSach)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayBatDau)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayKetThuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NganSach)
        </td>
        <td>
            @Html.ActionLink("Edit", "SuaTienDoUser",null, new { id=item.DuAnID }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Details", "ThongTinTienDoUser",null, new { id=item.DuAnID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "XoaTienDoUser",null, new { id=item.DuAnID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
